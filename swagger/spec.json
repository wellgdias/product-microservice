{
  "openapi": "3.0.0",
  "info": {
    "title": "product microservice",
    "description": "Marcoo microservices",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:{port}",
      "description": "Local server",
      "variables": {
        "port": {
          "default": "8082"
        }
      }
    },
    {
      "url": "https://marcoo-product.herokuapp.com/",
      "description": "(Internal) Production server"
    }
  ],
  "tags": [
    {
      "name": "API",
      "description": "Microservice endpoints"
    },
    {
      "name": "Health check",
      "description": "Service health check"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Check service health",
        "tags": [
          "Health check"
        ],
        "security": [],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthCheckResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/v1/products": {
      "get": {
        "summary": "Your GET endpoint",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                },
                "examples": {
                  "example-product": {
                    "$ref": "#/components/examples/ProductExample"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestError"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          }
        },
        "operationId": "get-products",
        "description": "Busca os produtos disponíveis",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "name",
            "description": "Busca pelo nome do produto"
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "category",
            "description": "Id da categoria"
          },
          {
            "schema": {
              "type": "string",
              "enum": [
                "first",
                "second",
                "third"
              ]
            },
            "in": "query",
            "name": "type",
            "description": "Nível da categoria"
          }
        ]
      },
      "parameters": []
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "HealthCheckResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Application running at: 8082"
          },
          "healthy": {
            "type": "boolean",
            "example": true
          },
          "services": {
            "type": "object",
            "additionalProperties": {
              "description": "A map of services, where the keys correspond to service names, and the value to it's health",
              "type": "boolean",
              "example": true
            }
          }
        }
      },
      "Product": {
        "type": "array",
        "description": "",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "object",
          "required": [
            "_id",
            "name",
            "brand",
            "image",
            "material",
            "volume",
            "amount"
          ],
          "properties": {
            "_id": {
              "type": "string",
              "minLength": 1
            },
            "name": {
              "type": "string",
              "minLength": 1
            },
            "brand": {
              "type": "string",
              "minLength": 1
            },
            "image": {
              "type": "string",
              "minLength": 1
            },
            "material": {
              "type": "string",
              "minLength": 1
            },
            "volume": {
              "type": "string",
              "minLength": 1
            },
            "amount": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "x-examples": {
          "example-1": [
            {
              "_id": "609330b0642b8120248dd5fc",
              "name": "Cerveja BUDWEISER Lata 350ml",
              "brand": "Budweiser",
              "image": "https://i.ibb.co/3sDQSbD/bud-latinha.jpg",
              "material": "Lata",
              "volume": "350 ml",
              "amount": "1"
            }
          ]
        }
      }
    },
    "parameters": {},
    "responses": {
      "ForbiddenError": {
        "description": "Não possui permissão de acesso ao recurso",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "NotFoundError": {
        "description": "Recurso não encontrado",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Erro interno no servidor",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "ServiceError": {
        "description": "Erro de serviço",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "BadRequestError": {
        "description": "Erro de requisição mal formada",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    },
    "examples": {
      "ProductExample": {
        "value": [
          {
            "_id": "609330b0642b8120248dd5fc",
            "name": "Cerveja BUDWEISER Lata 350ml",
            "brand": "Budweiser",
            "image": "https://i.ibb.co/3sDQSbD/bud-latinha.jpg",
            "material": "Lata",
            "volume": "350 ml",
            "amount": "1"
          }
        ]
      }
    }
  }
}
