                  "uniqueItems": true,
                  "items": {
                    "type": "object",
                    "required": [
                      "_id",
                      "name",
                      "brand",
                      "categories",
                      "image",
                      "material",
                      "volume",
                      "amount"
                    ],
                    "properties": {
                      "_id": {
                        "type": "string",
                        "minLength": 1
                      },
                      "name": {
                        "type": "string",
                        "minLength": 1
                      },
                      "brand": {
                        "type": "string",
                        "minLength": 1
                      },
                      "categories": {
                        "type": "object",
                        "properties": {
                          "first": {
                            "type": "string",
