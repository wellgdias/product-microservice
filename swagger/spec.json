                      {
                        "_id": "609558154e3ef6461c0b0f90",
                        "name": "Cerveja BUDWEISER Lata 350ml",
                        "brand": "Budweiser",
                        "categories": {
                          "first": "60932a930710622024cad153",
                          "second": "60932b250710622024cad19f",
                          "third": "60932bdb0710622024cad36c"
                        },
                        "image": "https://i.ibb.co/3sDQSbD/bud-latinha.jpg",
                        "material": "Lata",
                        "volume": "350 ml",
                        "amount": "1"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestError"
          }
        },
        "operationId": "get-products",
        "description": ""
      },
      "parameters": []
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "HealthCheckResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Application running at: 8082"
          },
          "healthy": {
            "type": "boolean",
            "example": true
          },
          "services": {
            "type": "object",
            "additionalProperties": {
              "description": "A map of services, where the keys correspond to service names, and the value to it's health",
              "type": "boolean",
              "example": true
            }
          }
        }
      }
    },
    "parameters": {},
    "responses": {
      "ForbiddenError": {
        "description": "Não possui permissão de acesso ao recurso",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "NotFoundError": {
        "description": "Recurso não encontrado",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Erro interno no servidor",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "ServiceError": {
        "description": "Erro de serviço",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "BadRequestError": {
        "description": "Erro de requisição mal formada",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    }
  }
}
